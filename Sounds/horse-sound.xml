<?xml version="1.0"?>

<PropertyList>
	<fx>
    <galopp>
     <name>galopp</name>
     <mode>looped</mode>
     <path>Aircraft/Horse/Sounds/galopp.wav</path>
     <condition>
       <and>
         <greater-than> 
          <property>/velocities/groundspeed-kt</property>
          <value>20</value>
         </greater-than>  
         <less-than> 
          <property>/fdm/jsbsim/position/h-agl-ft</property>
          <value>1.16</value>
         </less-than>         
         <not> 
          <property>/controls/special/swimming</property>
         </not>
       </and>
     </condition>
     <volume>
      <property>/velocities/groundspeed-kt</property>
      <type>log</type>
      <factor>0.4</factor>
     </volume>
     <pitch>
      <property>/velocities/groundspeed-kt</property>
      <factor>0.006</factor>
      <min>0.3</min>
      <max>18.0</max>
      <offset>0.3</offset>
     </pitch>
    </galopp>

    <walk>
     <name>walk</name>
     <mode>looped</mode>
     <path>Aircraft/Horse/Sounds/walk.wav</path>
     <condition>
       <and>
         <greater-than> 
          <property>/velocities/groundspeed-kt</property>
          <value>1</value>
         </greater-than> 
         <less-than> 
          <property>/velocities/groundspeed-kt</property>
          <value>20</value>
         </less-than>     
         <less-than> 
          <property>/fdm/jsbsim/position/h-agl-ft</property>
          <value>1.16</value>
         </less-than>         
         <not> 
          <property>/controls/special/swimming</property>
         </not>
       </and>
     </condition>
     <volume>
      <property>/velocities/groundspeed-kt</property>
      <type>log</type>
      <factor>0.4</factor>
     </volume>
     <pitch>
      <property>/velocities/groundspeed-kt</property>
      <factor>0.006</factor>
      <min>0.3</min>
      <max>18.0</max>
      <offset>0.3</offset>
     </pitch>
    </walk>

		<wind>
			<name>wind</name>
			<mode>looped</mode>
			<path>Sounds/wind.wav</path>
			<condition>
				<and>
					<property>velocities/airspeed-kt</property>
					<not>
						<property>sim/crashed</property>
					</not>
				</and>
			</condition>
			<volume>
				<property>velocities/airspeed-kt</property>
				<factor>0.0015</factor>
				<min>0.03</min>
				<max>0.25</max>
			</volume>
			<pitch>
				<property>velocities/airspeed-kt</property>
				<factor>0.01</factor>
				<offset>1.25</offset>
			</pitch>
			<reference-dist>10.0</reference-dist>
			<max-dist>20.0</max-dist>
		</wind>

		<water>
     <name>water</name>
     <mode>looped</mode>
     <path>Aircraft/Horse/Sounds/water.wav</path>
     <condition>
       <and>
         <greater-than> 
          <property>/velocities/groundspeed-kt</property>
          <value>1</value>
         </greater-than>
         <equals> 
          <property>/controls/special/swimming</property>
          <value>1</value>
         </equals>
       </and>
     </condition>
     <volume>
      <property>/velocities/groundspeed-kt</property>
      <type>log</type>
      <factor>0.4</factor>
     </volume>
     <pitch>
      <property>/velocities/groundspeed-kt</property>
      <factor>0.006</factor>
      <min>0.3</min>
      <max>18.0</max>
      <offset>0.3</offset>
     </pitch>
		</water>

		<watersplash>
     <name>watersplash</name>
     <mode>once</mode>
     <path>Aircraft/Horse/Sounds/water.wav</path>
     <condition>
       <equals> 
        <property>/controls/special/swimming</property>
        <value>1</value>
       </equals>
     </condition>
     <volume>
      <property>/velocities/groundspeed-kt</property>
      <type>log</type>
      <factor>0.4</factor>
     </volume>
     <pitch>
      <property>/velocities/groundspeed-kt</property>
      <factor>0.006</factor>
      <min>0.3</min>
      <max>18.0</max>
      <offset>0.3</offset>
     </pitch>
		</watersplash>

		<music>
			<name>music</name>
			<mode>looped</mode>
			<path>Aircraft/Horse/Sounds/bizbb.wav</path>
			<condition>
				<property>controls/special/singthesong</property>
			</condition>
			<volume>
				<factor>1.5</factor>
			</volume>
		</music>

	</fx>
</PropertyList>
